<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="64dp"
                android:paddingRight="32dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                tools:background="#ffaa00">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_temperature"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/temperatureIcon"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cloudy"
        android:id="@+id/weatherIcon"
        android:paddingLeft="10dp"
        android:layout_alignBottom="@+id/temperatureIcon"
        android:layout_toRightOf="@+id/temperatureIcon"
        android:layout_toEndOf="@+id/temperatureIcon"/>
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dayLabel"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/weatherIcon"
        android:layout_toEndOf="@+id/weatherIcon"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        tools:text ="Wednesday"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:paddingLeft="0dp"/>
    <TextView
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/degreeLabel"
        android:gravity="center"
        android:layout_alignTop="@+id/temperatureIcon"
        android:layout_alignLeft="@+id/temperatureIcon"
        android:layout_alignRight="@+id/temperatureIcon"
        android:layout_alignBottom="@+id/temperatureIcon"
        android:textColor="#f25019"/>
</RelativeLayout>